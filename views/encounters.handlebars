        <td>{{this.Date}}</td>
        <td>{{this.BasketsStolen}}</td>
        <td>{{this.PhotosTaken}}</td>
        <td>{{this.Description}}</td>
        <td>{{this.Bears}}</td>
        <td>{{this.Humans}}</td>
    </tr>
