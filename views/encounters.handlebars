<h1>Manage Encounters</h1>
<div>
<form id="addEncounter" action="/addencounter" method="post">
    <fieldset>
        <legend>Create Encounter</legend>
        <label for="parkName">Park name (choose "Not in a Park" if encounter occured outside of a Park):</label>
        <select id="parkID" name="parkID">
            <option value="">Choose a park</option>
            <option value="NULL">Not in a Park</option>
            {{#each data.parks}}
            <option value={{this.parkName}}>{{this.parkName}}</option>
            {{/each}}
        </select>
        <br>
        <label for="encounterdate">Date (required):</label>
        <input type="date" id="encounterdate" name="encounterdate" required>
        <br>
        <label for="baskets">Number of picnic baskets stolen:</label>
        <input type="number" min="0" id="baskets" name="baskets">
        <br>
        <label for="photos">Number of photos taken:</label>
        <input type="number" min="0" id="photos" name="photos">
        <br>
        <label for="description">Description of incident:</label>
        <input type="text" id="description" name="description">
        <br>
        <input type="submit" value="Create Encounter" id="submitbutton">
    </fieldset>
</form>
</div>


<h2>Add Bears to or remove Bears from Encounters</h2>
<div>
<form id="addBearToEncounter" action="/addBearToEncounter" method="post">
    <fieldset>
        <legend>Add Bear to Encounter</legend>
        <label for="bearID">Bear name:</label>
        <select id="bearID" name="bearID" required>
            <option value="">Choose a bear</option>
            {{#each data.bears}}
            <option value={{this.bearID}}>{{this.bearName}}</option>
            {{/each}}
        </select>
        <label for="encounterID">encounterID:</label>
        <select id="encounterID" name="encounterID" required>
            <option value="">Choose an encounter</option>
            {{#each data.allencounters}}
            <option value={{this.encounterID}}>{{this.encounterID}}</option>
            {{/each}}
        </select>
        <br>
        <input type="submit" value="Add Bear to Encounter" id="submitbutton">
    </fieldset>
</form>
</div>

<br>

<div>
<form id="removeBearFromEncounter" action="/removeBearFromEncounter" method="post">
    <fieldset>
        <legend>Remove Bear from Encounter</legend>
        <label for="bearID">Bear name:</label>
        <select id="bearID" name="bearID" required>
            <option value="">Choose a bear</option>
            {{#each data.bears}}
            <option value={{this.bearID}}>{{this.bearName}}</option>
            {{/each}}
        </select>
        <label for="encounterID">encounterID:</label>
        <select id="encounterID" name="encounterID" required>
            <option value="">Choose an encounter</option>
            {{#each data.allencounters}}
            <option value={{this.encounterID}}>{{this.encounterID}}</option>
            {{/each}}
        </select>
        <br>
        <input type="submit" value="Remove Bear from Encounter" id="submitbutton">
    </fieldset>
</form>
</div>
<br>

<h2>Encounters</h2>
<table>
    <tr>
        <th>Encounter ID</th>
        <th>Park</th>
        <th>Date</th>
        <th>Baskets Stolen</th>
        <th>Photos Taken</th>
        <th>Description</th>
        <th>Bears</th>
        <th>Humans</th>
    </tr>
    {{#each data.encounters}}
    <tr>
        <td>{{this.enID}}</td>
