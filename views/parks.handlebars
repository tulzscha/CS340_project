<h1>Manage Parks</h1>
<div>
<form id="addPark" action="/addpark" method="post">
    <fieldset>
        <legend>Create Park</legend>
        <label for="pname">Park name (required):</label>
        <input type="text" id="pname" name="pname" required>
        <label for="state">State (required, 2-letter Postal Code):</label>
        <input type="text" id="sname" name="sname" maxlength="2" minlength="2" required>
        <label for="annualVisitorCount">Annual Visitor Count:</label>
        <input type="number" id="annualVisitorCount" name="annualVisitorCount" minlength="0"><br>
        <input type="submit" value="Create Park" id="createParkButton">
    </fieldset>
</form>
</div>

<div>
<form id="removeParkFromEncounter" action="/removeParkFromEncounter" method="post">
    <fieldset>
        <legend>Remove Park from Encounter</legend>
        <label for="encounterID">Encounter ID:</label>
        <select id="encounterID" name="encounterID">
            <option value="">Choose an encounter</option>
            {{#each data.encounters}}
            <option value={{this.encounterID}}>{{this.encounterID}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Remove Park" id="removeParkButton">
    </fieldset>
</form>
</div>

<div>
<form  id="addParkToEncounter" action="/addParkToEncounter" method="post">
    <fieldset>
        <legend>Add Park to Encounter</legend>
        <label for="updateParkID">Park name:</label>
        <select id="updateParkID" name="updateParkID">
            <option value="">Choose a Park</option>
            {{#each data.parks}}
            <option value={{this.parkID}}>{{this.parkName}}</option>
            {{/each}}
        </select>
        <label for="encounterID">Encounter ID:</label>
        <select id="updateEncounterID" name="updateEncounterID">
            <option value="">Choose an Encounter</option>
            {{#each data.encounters}}
            <option value={{this.encounterID}}>{{this.encounterID}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Add Park" id="addParkButton">

    </fieldset>
</form>
</div>


<h2>View parks</h2>
<table>
    <tr>
        <th>parkID</th>
        <th>Park name</th>
        <th>State</th>
        <th>Annual Visitor Count</th>
    </tr>
    {{#each data.parks}}
    <tr>
        <td>{{this.parkID}}</td>
        <td>{{this.parkName}}</td>
        <td>{{this.state}}</td>
        <td>{{this.annualVisitorCount}}</td>
    </tr>
    {{/each}}
</table>